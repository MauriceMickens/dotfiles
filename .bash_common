#!/bin/bash
export CLICOLOR=1
export EDITOR=vim
export LSCOLORS=ExFxBxDxCxegedabagacad
export NSS_SSL_CBC_RANDOM_IV=0
export PATH=$HOME/.local/bin:$HOME/bin:node_modules/.bin:$PATH
export PS1="[\u@\h \w]$ "
alias gr='git fetch; git rebase -i origin/master'
alias ll='ls -FGlAhp'
alias rf='find . 2> /dev/null | grep'
alias striphtml="sed 's|<[^>]*>||g'"
alias pt='python -m unittest discover'
if [ -x "$(command -v trash)" ]; then
    alias rm='trash'
fi
ti() {
    tmux new-session -d irssi
    tmux -2 attach-session -d
}
td() {
    tmux new-session -d 'vim .'
    tmux split-window -v
    tmux send-keys 'cd .' Enter
    tmux split-window -h
    tmux send-keys 'cd .' Enter
    tmux resize-p -y 10
    tmux -2 attach-session -d
}
function cd(){
    builtin cd "${*}"
    if [ -e ".env" ]; then
        . .env
    fi
}
